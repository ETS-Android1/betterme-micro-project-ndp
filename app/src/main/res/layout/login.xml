<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".betterMe.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        >

        <ImageView
            android:layout_width="148dp"
            android:layout_height="167dp"
            android:layout_gravity="center"
            android:src="@drawable/splash_screen_bg"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/form"
            android:hint="Username"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="18dp"
            android:textColorHint="@color/black"
            android:fontFamily="@font/comicceue_bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/form"
            android:hint="Username"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="18dp"
            android:textColorHint="@color/black"
            android:fontFamily="@font/comicceue_bold"
            />

        <Button
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/green_button_primary"
            android:textColor="@color/white"
            android:background="@drawable/button_primary"
            android:fontFamily="@font/comicceue_bold"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:inputType="textCapSentences"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/don_t_have_an_account"
                android:textColor="@color/grey"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/register"
                android:textColor="@color/green_button_primary"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>